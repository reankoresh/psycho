---
export interface Props {
  title?: string;
  tag?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  class?: string;
}

const {
  title = "Título por defecto",
  tag = "h1",
  class: className = "",
} = Astro.props;

// Definir clases automáticas según el tag
const tagClasses = {
  h1: "text-4xl font-bold",
  h2: "text-3xl font-semibold",
  h3: "text-2xl font-medium",
  h4: "text-xl font-medium",
  h5: "text-lg font-normal",
  h6: "text-base font-normal",
};

// Combinar clases automáticas con clases personalizadas
const finalClasses = `${tagClasses[tag]} ${className}`.trim();

const Tag = tag;
---

<Tag class={finalClasses}>{title}</Tag>
