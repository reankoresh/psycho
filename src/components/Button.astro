---
// filepath: c:\Users\Raúl\Desktop\psycho\src\components\Button.astro
export interface Props {
  text?: string;
  type?: "button" | "submit" | "reset";
  class?: string;
  onClick?: string;
  id?: string;
}

const {
  text = "Button",
  type = "button",
  class: className = "",
  onClick = "",
  id = "",
} = Astro.props;

// Clases base del botón
const baseClasses =
  "w-40 py-3 active:scale-95 transition text-sm text-white rounded-full bg-indigo-500 flex items-center justify-center gap-1 hover:bg-indigo-600";

// Combinar clases base con clases personalizadas
const finalClasses = `${baseClasses} ${className}`.trim();
---

<button
  type={type}
  class={finalClasses}
  onclick={onClick}
  id={id}
  data-target={id}
>
  <p class="mb-0.5">{text}</p>
</button>
