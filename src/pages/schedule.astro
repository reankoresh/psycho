---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import NavBottom from "../components/NavBottom.astro";
import Image from "../components/Image.astro";
---

<Layout bgColor="bg-gradient-to-t from-purple-300 from-60% to-cyan-200">
  <div class="mx-auto h-32 flex items-center justify-center">
    <!-- h1 → h2 -->
    <Title title="Agenda" tag="h2" class="text-center" />
  </div>

  <div class="container mx-auto my-4 px-4 flex justify-center">
    <Image
      src="/src/assets/schedule/schedule.svg"
      alt="Schedule"
      class="schedule-image w-full h-80"
    />
  </div>
  <div
    class="container mx-auto my-4 px-4 flex flex-col justify-center items-center"
  >
    <!-- h3 → h4 -->
    <Title
      title="Inscribete desde aquí"
      tag="h4"
      class="text-center font-bold"
    />
    <a
      href="/contact"
      class="cursor-pointer w-16 h-16 text-xs rounded-full bg-neutral-400 flex items-center justify-center"
    >
      Inscribete
    </a>
  </div>

  <div class="mx-auto mb-10 flex items-center justify-center">
    <!-- h3 → h4 -->
    <Title title="Disponibilidad" tag="h4" class="text-center font-bold" />
  </div>

  <!-- Calendario de Google -->
  <div class="calendar-container mx-auto px-4 flex justify-center mb-8">
    <iframe
      src="https://calendar.google.com/calendar/embed?src=psychord47%40gmail.com&ctz=America%2FMonterrey&bgcolor=%23ffffff&color=%23039BE5&mode=MONTH&showTitle=0&showNav=1&showDate=1&showPrint=0&showTabs=0&showCalendars=0&showTz=0&height=700&wkst=1"
      style="border: 0"
      class="w-full max-w-11/12 rounded-3xl shadow-lg h-80 opacity-70"></iframe>
  </div>

  <NavBottom />
</Layout>
